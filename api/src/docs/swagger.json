{
    "openapi": "3.0.0",
    "info": {
        "title": "icDev-Api",
        "description": "Inventory Management API",
        "contact": {
            "email": "icdevroot@icdev.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://localhost:8080/v1",
            "description": ""
        }
    ],
    "paths": {
        "/auth/signupAuth": {
            "post": {
                "summary": "Authenticates a user to register",
                "description": "Requests the company code for the user to authenticate for the user to register in the application, if everything goes well, returns a register token to be used in registration.",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/companyCode"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/registerToken"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/signup": {
            "post": {
                "summary": "Register a authenticated user",
                "description": "It requires the id of the company that provided its code in user register authentication, this id must be passed in the header as 'company-id', the register token obtained in the /signUpAuth route must also be informed, if the registration occurs without errors, the registered user data is returned.",
                "parameters": [ 
                    {
                        "in": "header",
                        "name": "company-id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "description": "User company id, same company where you used the code in the authentication route for registration"
                    }
                ],
                "tags": ["Auth"],
                "security": [ { "registerToken": [] } ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/userDataSignUpRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/userDataSignUpResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/signin": {
            "post": {
                "summary": "Authenticates a user to use api",
                "description": "Performs user authentication for using the API, if the login entered and password are correct, it returns an access token to be used in requests to be made to the API.",
                "tags": ["Auth"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/userDataSignInRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/accessToken"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company": {
            "get": {
                "summary": "Get user company",
                "description": "Returns the company data of the logged in user if they have permission to view",
                "parameters": [ 
                    {
                        "in": "header",
                        "name": "company-id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "description": "User company id"
                    }
                ],
                "tags": ["Company"],
                "security": [ { "accessToken": [] } ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/userCompanyDataResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/company/apikey/new": {
            "put": {
                "summary": "Generate a new company api key",
                "description": "Generates a new api key for the logged in user company if they have permission to perform the action, note when a new api key is generated, the user must authenticate again to generate another access token.",
                "parameters": [ 
                    {
                        "in": "header",
                        "name": "company-id",
                        "schema": {
                            "type": "integer"
                        },
                        "required": true,
                        "description": "User company id"
                    }
                ],
                "tags": ["Company"],
                "security": [ { "accessToken": [] } ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/userCompanyApiKeyResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "Forbidden",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/responseMessage"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "responseMessage": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "description": "Response message",
                    "required": true
                }
            }
        },
        "companyCode": {
            "type": "object",
            "properties": {
                "companyCode": {
                    "type": "string",
                    "size": 16,
                    "required": true
                }
            }
        },
        "registerToken": {
            "type": "object",
            "properties": {
                "registerToken": {
                    "type": "string",
                    "required": true
                }
            }
        },
        "userDataSignUpRequest": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "size": 50,
                    "required": true
                },
                "lastName": {
                    "type": "string",
                    "size": 50,
                    "required": true
                },
                "login": {
                    "type": "string",
                    "size": 30,
                    "required": true
                },
                "password": {
                    "type": "string",
                    "required": true
                },
                "cpf": {
                    "type": "string",
                    "size": 11,
                    "required": true
                },
                "street": {
                    "type": "string",
                    "size": 150,
                    "required": true
                },
                "streetNumber": {
                    "type": "integer",
                    "required": true
                },
                "district": {
                    "type": "string",
                    "size": 150,
                    "required": true
                },
                "birthDate": {
                    "type": "string",
                    "example": "YYYY-MM-DD",
                    "required": true
                },
                "phone": {
                    "type": "string",
                    "size": 14,
                    "required": true
                },
                "email": {
                    "type": "string",
                    "size": 255,
                    "required": true
                },
                "city": {
                    "type": "string",
                    "description": "Only accepts cities in Brazil and the United States",
                    "required": true
                }
            }
        },
        "userDataSignUpResponse": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "size": 50,
                    "required": true
                },
                "lastName": {
                    "type": "string",
                    "size": 50,
                    "required": true
                },
                "login": {
                    "type": "string",
                    "size": 30,
                    "required": true
                },
                "cpf": {
                    "type": "string",
                    "size": 11,
                    "required": true
                },
                "street": {
                    "type": "string",
                    "size": 150,
                    "required": true
                },
                "streetNumber": {
                    "type": "integer",
                    "required": true
                },
                "district": {
                    "type": "string",
                    "size": 150,
                    "required": true
                },
                "complement": {
                    "type": "string",
                    "size": 255,
                    "required": false
                },
                "city": {
                    "type": "string",
                    "required": true
                },
                "birthDate": {
                    "type": "string",
                    "example": "YYYY-MM-DD",
                    "required": true
                },
                "phone": {
                    "type": "string",
                    "size": 14,
                    "required": true
                },
                "email": {
                    "type": "string",
                    "size": 255,
                    "required": true
                },
                "company": {
                    "type": "string",
                    "required": true
                },
                "createdAt": {
                    "type": "string",
                    "example": "YYYY-MM-DDTHH:mm:ss.sssZ",
                    "required": true
                }
            }
        },
        "userDataSignInRequest": {
            "type": "object",
            "properties": {
                "login": {
                    "type": "string",
                    "size": 30,
                    "required": true
                },
                "password": {
                    "type": "string",
                    "required": true
                }
            }
        },
        "accessToken": {
            "type": "object",
            "properties": {
                "accessToken": {
                    "type": "string",
                    "required": true
                }
            }
        },
        "userCompanyDataResponse": {
            "type": "object",
            "properties": {
                "idCompany": {
                    "type": "string",
                    "size": 30,
                    "required": true
                },
                "name": {
                    "type": "string",
                    "required": true
                },
                "code": {
                    "type": "string",
                    "size": 16,
                    "required": true
                },
                "apiKey": {
                    "type": "string",
                    "size": 16,
                    "required": true
                }
            }
        },
        "userCompanyApiKeyResponse": {
            "type": "object",
            "properties": {
                "apiKey": {
                    "type": "string",
                    "size": 16,
                    "required": true
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "registerToken": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Token for user registration authentication."
            },
            "accessToken": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Token for user authentication in the API."
            }
        }
    }
}